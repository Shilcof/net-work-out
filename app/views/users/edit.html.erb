<div class="container px-5 pt-3">
    <%= form_for @user, url: user_path(@user) do |f| %>
    <div class="form-row" >
        <div class="col-md-12 mb-3">
            <%= f.label :name %>
            <%= f.text_field :name, class: form_class(@user, :name) %>
            <%= invalid_feedback(@user, :name) %>
        </div>
        <div class="col-md-12 mb-3">
            <%= f.label :bio %>
            <%= f.text_area :bio, class: form_class(@user, :bio), rows: 10 %>
            <%= invalid_feedback(@user, :bio) %>
        </div>
    </div>
        <div class="form-group">
            <%= f.check_box :admin %>
            <%= f.label :admin, "Request admin rights" %>
        </div>
        <%= f.submit "Update", class: "btn btn-outline-primary btn-block" %>
    <% end %>
</div>