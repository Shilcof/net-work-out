<div class="row" >
    <aside class="col-md-3">
        <div class="p-3 bg-light rounded navbar-nav ml-auto text-center border">
            <%= form_tag current_uri, method: :get do %>
                <div class="col-md-12 mb-3">
                    <%= text_field_tag :search, nil, class: "form-control", placeholder: "Search by title" %>
                </div>

                <div class="col-md-12 mb-3">
                    <%= collection_select nil, :muscle_id, @muscles, :id, :name, {include_blank: "Search by muscle"}, {class: "form-control"} %>
                </div>

                <div class="col-md-12 mb-3">
                    <%= collection_select nil, :exercise_id, @exercises, :id, :name, {include_blank: "Search by exercise"}, {class: "form-control"} %>
                </div>

                <div data-toggle="buttons" class="col-md-12 mb-2 row btn-group">
                    <div class="col-md-6 pl-0 pr-2 mb-0">
                        <label class="btn btn-outline-secondary btn-block">
                            <input type="radio" name="sort" id="new" value="new"> New
                        </label>
                    </div>

                    <div class="col-md-6 pr-0 pl-2 mb-0">
                        <label class="btn btn-outline-secondary btn-block">
                            <input type="radio" name="sort" id="stars"  value="stars"> Stars
                        </label>
                    </div>
                </div>

                <div class="col-md-12 mb-3">
                    <%= number_field :amount, nil, {placeholder: "Choose how many to display", class: "form-control"} %>
                </div>

                <div class="col-md-12 mb-3">
                    <button type="submit" class="btn btn-outline-primary btn-block">Search</button>
                </div>
            <% end %>
            <div class="col-md-12">
                <%= button_to "New workout", new_workout_path, method: :get, class: "btn btn-outline-success btn-block" if logged_in? %>
            </div>
        </div>
    </aside>

    <div class="col-md-9">
        <div class="card mb-3 bg-light">
            <div class="card-body">
                <h3 class="text-center"><%= workout_index_title %></h3>
            </div>
        </div>
        <%= render(@workouts) || query_not_found_for("workouts") %>
    </div>
</div>