<div class="container px-5 pt-3">
    <%= form_for @user, url: complete_signup_path(@user) do |f| %>
    <div class="form-row" >
        <div class="col-md-6 mb-3">
            <div>Add username for <%= @user.email %>.</div>
        </div>
        <div class="col-md-6 mb-3">
            <%= f.label :username %>
            <%= f.text_field :username, class: form_class(@user, :username) %>
            <%= invalid_feedback(@user, :username) %>
        </div>
    </div>
        <div class="form-group">
            <%= f.check_box :admin %>
            <%= f.label :admin, "Request admin rights" %>
        </div>
        <%= f.submit "Complete sign up", class: "btn btn-outline-primary btn-block" %>
    <% end %>
</div>