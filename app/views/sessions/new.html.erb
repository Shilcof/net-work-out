<div class="container px-5 pt-3">

    <%= alerts %>

    <%= form_for :user do |f| %>
        <div class="form-row" >
            <div class="col-md-6 mb-3">
                <%= f.label :username, "Username or email" %>
                <%= f.text_field :username, class: "form-control" %>
            </div>
            <div class="col-md-6 mb-3">
                <%= f.label :password %>
                <%= f.password_field :password, class: "form-control" %>
            </div>
        </div>
        <%= f.submit 'Log in', class: "btn btn-outline-primary btn-block" %>
    <% end %>

    <div class="form-row pt-3">
        <div class="col-md-6">
            <%= button_to "Sign up", signup_path, method: :get, class: "btn btn-outline-secondary btn-block" %>
        </div>
        <div class="col-md-6">
            <%= button_to "Log in with Google", '/auth/google_oauth2', class: "btn btn-outline-secondary btn-block" %>
        </div>
    </div>
</div>