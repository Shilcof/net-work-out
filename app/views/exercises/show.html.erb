<div class="row" >
    <aside class="col-md-3 mb-3">
        <div class="p-3 bg-light rounded navbar-nav ml-auto text-center border <%= "border-warning" if starred?(@exercise) %>">
            <div class="py-3">
                <%= star_object(@exercise) %><br>
                <%= content_tag :h3, @exercise.name %>
                <p> Muscle trained: <%= link_to @exercise.muscle.name, @exercise.muscle %></p>
                <%= content_tag :p, @exercise.html %>
                <%= button_to "Edit exercise", edit_exercise_path(@exercise) ,method: :get, class: "btn btn-outline-primary btn-block" if admin? %><br>
                <%= button_to "Delete exercise", exercise_path(@exercise) ,method: :delete, class: "btn btn-outline-danger btn-block" if admin? %>
            </div>
        </div>
    </aside>

    <div class="col-md-9">
        <div class="card mb-3 bg-light">
            <div class="card-body">
                <h3 class="text-center">Workouts featuring <%= @exercise.name %></h3>
            </div>
        </div>
        <%= render(@workouts) || render(partial: 'layouts/no_workouts_to_show') %>
    </div>
</div>